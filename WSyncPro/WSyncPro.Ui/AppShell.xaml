<!-- AppShell.xaml -->
<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:WSyncPro.Ui.Views"
       x:Class="WSyncPro.Ui.AppShell">

    <TabBar>
        <!-- Import Tab -->
        <ShellContent
            Title="Import"
            Icon="import_icon.png" 
            ContentTemplate="{DataTemplate views:ImportPage}" />

        <!-- Sync Tab -->
        <ShellContent
            Title="Sync"
            Icon="sync_icon.png" 
            ContentTemplate="{DataTemplate views:SyncPage}" />

        <!-- Settings Tab -->
        <ShellContent
            Title="Settings"
            Icon="settings_icon.png" 
            ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

</Shell>
