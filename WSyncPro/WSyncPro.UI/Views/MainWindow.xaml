<Window x:Class="WSyncPro.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WSyncPro.UI.Views"
    Title="WSyncPro" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Settings" Click="SettingsMenu_Click"/>
            <MenuItem Header="Jobs">
                <MenuItem Header="Import Jobs"/>
                <MenuItem Header="Export Jobs"/>
            </MenuItem>
            <MenuItem Header="History"/>
            <MenuItem Header="Help/About"/>
        </Menu>
        <TabControl Margin="10,30,10,10">
            <TabItem Header="Job Management">
                <local:JobManagementView />
            </TabItem>
            <TabItem Header="Run History">
                <!-- Run History UI Components -->
            </TabItem>
            <TabItem Header="Import Files">
                <!-- Import Files UI Components -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
