<Window x:Class="WSyncPro.UI.Views.ImportProfileEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Profile Editor" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Profile Name:" Margin="5"/>
            <TextBox x:Name="ProfileNameTextBox" Margin="5"/>

            <TextBlock Text="Description:" Margin="5"/>
            <TextBox x:Name="DescriptionTextBox" Margin="5"/>

            <TextBlock Text="Default Import Path:" Margin="5"/>
            <TextBox x:Name="DefaultImportPathTextBox" Margin="5"/>
            <Button Content="Browse" Margin="5" Click="BrowseImportPath_Click"/>

            <TextBlock Text="Grouping Pattern:" Margin="5"/>
            <TextBox x:Name="GroupingPatternTextBox" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Save Profile" Margin="5" Click="SaveProfileButton_Click"/>
                <Button Content="Load Profile" Margin="5" Click="LoadProfileButton_Click"/>
                <Button Content="Save and Close" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
