<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components;assembly=Microsoft.AspNetCore.Components"
             xmlns:local="clr-namespace:WSyncPro.App"
             x:Class="WSyncPro.App.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- BlazorWebView Setup -->
    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <!-- Reference the Blazor App component (typically App.razor) -->
            <blazor:RootComponent Selector="#app" ComponentType="{x:Type local:BlazorApp}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
