<Window x:Class="WSyncProApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Theme" FontSize="16"/>
            <ComboBox Name="ThemeComboBox">
                <ComboBoxItem Content="Light Theme"/>
                <ComboBoxItem Content="Dark Theme"/>
            </ComboBox>
            <Button Content="Apply" Margin="0,20,0,0" Click="Apply_Click"/>
        </StackPanel>
    </Grid>
</Window>
