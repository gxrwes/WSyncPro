<UserControl x:Class="WSyncProApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Current Version:" FontSize="16"/>
            <TextBlock Name="CurrentVersionText" FontSize="14" Margin="0,0,0,20"/>
            <TextBlock Text="Last Release Notes:" FontSize="16"/>
            <TextBlock Name="LastReleaseNotesText" FontSize="14" Margin="0,0,0,20"/>
            <TextBlock Text="Release Notes History:" FontSize="16"/>
            <ListBox Name="ReleaseNotesHistoryList" FontSize="14">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Version}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
