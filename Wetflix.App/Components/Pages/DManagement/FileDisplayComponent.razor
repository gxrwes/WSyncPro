@using WSyncPro.Models.Files
@using MudBlazor

<MudListItem T="string" @onclick="() => HandleFileClick(File)">
    <MudText Typo="Typo.body1">@File.Name</MudText>
    <MudText Typo="Typo.caption" Class="ml-2">(@File.FileExtension)</MudText>
    <MudText Typo="Typo.caption" Class="ml-2">Size: @File.FileSize bytes</MudText>
</MudListItem>

@code {
    [Parameter] public WFile File { get; set; }

    [Parameter] public EventCallback<WFile> OnFileSelected { get; set; }



    private async Task HandleFileClick(WFile file)

    {

        if (OnFileSelected.HasDelegate)

        {

            await OnFileSelected.InvokeAsync(file);

        }

    }
}
